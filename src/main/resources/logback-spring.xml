<configuration>
    <!-- 標準出力 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%white(%d{yyyy/MM/dd HH:mm:ss}) %cyan(%logger{15}) %highlight(%-5level) [%thread] -  %highlight(%msg%n)
            </pattern>
        </encoder>
    </appender>
    <!-- root -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>